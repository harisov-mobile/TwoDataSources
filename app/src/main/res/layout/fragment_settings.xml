<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.SettingsFragment"
    >

    <RadioGroup
        android:id="@+id/datasource_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RadioButton
            android:id="@+id/datasource1_radio_button"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datasource1_radio_button_label"
            tools:text="datasource1_radio_button" />

        <RadioButton
            android:id="@+id/datasource2_radio_button"
            android:layoutDirection="rtl"
            android:text="@string/datasource2_radio_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="datasource2_radio_button" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>